# F1 Prediction API - Environment Configuration Template
# Copy this to .env and fill in your values
# DO NOT commit .env to git - it contains secrets!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here

# =============================================================================
# DATA PATHS (Local Development)
# =============================================================================
DATA_PATH=./f1_training_dataset_2018_2024.csv
MODEL_DIR=./models_spencer
MODEL_WINNER_FILE=xgb_winner.joblib
MODEL_PODIUM_FILE=xgb_podium.joblib
MODEL_METADATA_FILE=metadata.joblib
CACHE_DIR=./cache
FASTF1_CACHE_DIR=./f1_cache

# =============================================================================
# DATABASE (Production)
# =============================================================================
# DATABASE_URL=postgresql://user:password@host:5432/dbname
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key

# =============================================================================
# REDIS CACHE (Production)
# =============================================================================
# REDIS_URL=redis://default:password@host:6379

# =============================================================================
# EXTERNAL APIs
# =============================================================================
ERGAST_BASE_URL=http://ergast.com/api/f1
OPENF1_API_URL=https://api.openf1.org/v1

# =============================================================================
# MLFLOW TRACKING
# =============================================================================
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_EXPERIMENT_NAME=f1-predictions-prod

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=5000
LOG_LEVEL=INFO
